.chat-main
  .main-header
    .main-header__left-box
      %h2.main-header__left-box__current-group chat
      %ul.main-header__left-box__member-list
        Memberï¼š
        %li.main-header__left-box__member-list__member keitarou
    = link_to "#" do
      .main-header__edit-btn Edit
  .messages
    .message
      .message__upper-info
        %p.message__upper-info__talker keitarou
        %p.message__upper-info__date 1998/05/16(sat)
      %p.message__text hello
  .form
    %form
      .input-box
        %input{type: "text", class: "input-box__text", placeholder: "type a message"}
        %label{class: "input-box__image"}
          = icon('fas', 'image')
          %input{type: "file", class: "input-box__image__file"}
      %input{type: "submit", value: "Send", class: "submit-btn"}
